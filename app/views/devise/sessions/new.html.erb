<!DOCTYPE html>
<html >
<head>
  <meta charset="UTF-8">
</head>

<body>
<div class="login">
  <div class="login-screen">
    <div class="app-title">
      <h1>Iniciar Sesión</h1>
    </div>

    <div class="login-form">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="control-group">
          <%= f.label :email, "Correo electronico" %><br /><br>
          <%= f.email_field :email, autofocus: true, class:"login-field"%>
        </div>
        <br>

        <div class="control-group">
          <%= f.label :password, "Contraseña" %><br />
          <%= f.password_field :password, autocomplete: "off", class:"login-pass" %>
        </div>
        <br>

        <% if devise_mapping.rememberable? -%>
            <div class="control-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "Recordar mis datos" %>
            </div>
        <% end %>

        <div class="control-group">
          <%= f.submit "Iniciar sesion", class:"btnlog btn-success" %>
        </div>
    <% end %>



    <div class="login-form">

      <%= render "devise/shared/links" %>
    </div>
      <%= link_to 'Regresar', :back, class: "btnlog btn-success" %>
  </div>
</div>
</div>
</body>


</html>