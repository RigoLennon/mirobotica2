<div class="row center-xs">
  <div class="col-xs-8 col-md-6">
    <div class="box">

      <h2 class="simple-text">Iniciar sesión</h2>
      <br>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, "Correo electronico" %><br /><br>
            <%= f.email_field :email, autofocus: true, class:"form-control"%>
          </div>
          <br>

          <div class="field">
            <%= f.label :password, "Contraseña" %><br />
            <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
          </div>
          <br>

          <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, "Recordar mis datos" %>
              </div>
          <% end %>

          <div class="actions center-xs">
            <%= f.submit "Iniciar sesion", class:"btn btn-success" %>
          </div>
      <% end %>

        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>