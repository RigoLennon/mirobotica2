<%= form_for(@article) do |f|%>
    <% @article.errors.full_messages.each do |message|%>
        <div class="arriba">
          <div class="alert alert-danger">
            <div class="container-fluid">
              <div class="alert-icon">
                <i class="material-icons">warning</i>
              </div>
              <b>Alerta de Error en el </b> <%= message %>
            </div>
          </div>
    <%end%>
    </div>

    <div class="form-group label-floating">
      <div class="field">
        <%= f.text_field :title, placeholder: "Titulo", class:"form-control"%>
      </div>
      <div class="field">
        <div class="form-group label-floating">
          <%= f.text_area :body, placeholder: "Escribe una descripcion de la actividad", class:"form-control"%>
        </div>
      </div>
      <div class="btn">
        Subir imagen de portada <%= f.file_field :image %>
      </div>

      <div class="field">
        <label>Cursos:</label>
        <% @categories.each do |category| %>
            <div class="field">
              <%= check_box_tag "categories[]", category.id%> <%= category.title%>
            </div>
        <%end%>
      </div>

      <br>
      <br>
      <div class="field">
        <%= f.submit "Guardar nueva actividad", class:"btn btn-success"%>
      </div>
    </div>
<%end%>