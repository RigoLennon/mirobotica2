<p id="notice"><%= notice %></p>

<h1><%= @category.title %></h1>
<h2>Actividades</h2>

<% @category.articles.each do |article| %>

    <div class="col-md-6">
      <div class="card">
        <div class="card-header card-chart" data-background-color="orange"
             style="background:url(<%= article.image.url() %>);">

        </div>
        <div class="card-content">
          <h4 class="title"><%= link_to article.title, article %></h4>
          <p class="category"><%= article.body %></p>
        </div>
        <div class="card-footer">
          <div class="stats">
            <i class="material-icons">access_time</i> Actualizado el  <%= article.updated_at %>
          </div>
        </div>
      </div>
    </div>
<%end%>

<div class="center-xs">

</div>
